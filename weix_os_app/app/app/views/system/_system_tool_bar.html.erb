<div class="system-tool-bar">
  <!-- menue -->
  <div class="system-menue" onclick="event.stopPropagation();">
    <button onclick="openSystemMenue(event);">
      <img src="https://i.pinimg.com/originals/9f/88/36/9f88367196529f0c55008438904a2c9b.jpg" class="icon" draggable="false" />
    </button>

    <div id="system-menue-box" class="menue-box hidden" >
      <div class="menue-left">

      </div>

      <div class="menue-right">
        <div class="current-user">
          <div class="user-profile">
            <img src="https://i.pinimg.com/originals/9f/88/36/9f88367196529f0c55008438904a2c9b.jpg" class="profile-picture" draggable="false" />
          </div>

          <div class="user-name">
            User: <%= current_user.email %>
          </div>
        </div>

        <button onclick="logOut();">
          Abmelden
        </button>
      </div>

      <span class="vr"></span>
    </div>
  </div>

  <!-- list of pinned applications -->
  <div id="pinned-applications" class="system-pinned-applications"></div>

  <!-- right side of the system toolbar -->
  <div class="system-information">
    
    <!-- system time -->
    <div class="element">
      <span id="system-time" class="time"></span>
      <script>getSystemTime();</script>
    </div>

    <span class="vr"></span>

    <div class="element">
      <div class="info">
        X
      </div>
    </div>

  </div>
</div>