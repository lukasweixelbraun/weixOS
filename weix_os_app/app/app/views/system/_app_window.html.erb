<div id="app-window-id-<%=app.id%>" class="app-window window <%= last_state %>" style="top: <%= pos_y %>%; left: <%= pos_x %>%;">
  <div class="app-title-bar" ondblclick="appFullscreen(event, <%=app.id%>)">
    <div class="app-button app-close" onclick="closeApp(event, <%=app.id%>)"></div>
    <div class="app-button app-fullscreen" onclick="appFullscreen(event, <%=app.id%>)"></div>
    <div class="app-button app-hide" onclick="hideApp(event, <%=app.id%>)"></div>
  </div>

  <div class="app-body">
    <%= render partial: "my_apps/#{app.template_name}", locals: { app: app } %>
  </div>
</div>